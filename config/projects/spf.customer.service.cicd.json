{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "DevSecOps Pipeline Configuration for .NET projects",
    "project": {
        "name": "spf.customer.service.cicd.git",
        "gitUrl": "git@gitlab.fr.pluxee.tools:cicd/spf.customer.service.cicd.git",
        "gitBranch": "release/cicd",
        "gitCredentials": "git-ssh-key",
        "jenkinsAgent": "plxfrsr-l1pi027",
        "environments": [
            {
                "name": "tst",
                "displayName": "Test",
                "targetServers": [
                    "plxfrsr-l2ta033"
                ]
            },
            {
                "name": "sta",
                "displayName": "Staging",
                "targetServers": [
                    "plxfrsr-l1saa91",
                    "plxfrsr-l1saa92"
                ]
            },
            {
                "name": "prd",
                "displayName": "Production",
                "targetServers": [
                    "plxfrsr-l1pad51",
                    "plxfrsr-l1pad52"
                ]
            }
        ]
    },
    "build": {
        "scriptPath": "D:\\_puppet\\script\\buildDotNetCore3.1.ps1",
        "framework": ".NET Core 3.1",
        "configuration": "Release",
        "verbosity": "normal",
        "proxyServer": "proxy.fr.pluxee.tools",
        "proxyPort": "3128",
        "apis": [
            "SPF.Customer.Service.Presentation.Api"
        ],
        "artifacts": {
            "pattern": "**/bin/Release/**/*.dll",
            "exclude": [
                "**/obj/**",
                "**/test/**"
            ]
        }
    },
    "security": {
        "dependencyScan": {
            "enabled": true,
            "tool": "NuGet",
            "failOnCritical": true,
            "failOnHigh": true,
            "failOnMedium": false
        },
        "codeAnalysis": {
            "enabled": false,
            "tool": "SonarQube"
        },
        "secretsScan": {
            "enabled": false,
            "tool": "GitLeaks"
        }
    },
    "notifications": {
        "devteam": [
        ],
        "qateam": [
            "amin.kadira.ext@pluxeegroup.com",
            "jeanmichel.robert@pluxeegroup.com"
        ],
        "securityTeam": [
        ]
    },
    "logging": {
        "level": "INFO",
        "retention": {
            "builds": 30,
            "daysToKeep": 90
        },
        "archiveArtifacts": true
    },
    "quality": {
        "failBuild": {
            "onSecurityIssues": true,
            "onBuildFailure": true,
            "onDeploymentFailure": true
        }
    }
}