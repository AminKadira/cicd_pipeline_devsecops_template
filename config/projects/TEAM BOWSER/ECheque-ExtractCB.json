    "logging": {
        "level": "INFO",
        "retention": {
            "builds": 30,
            "daysToKeep": 90
        },
        "archiveArtifacts": true
    },
    "quality": {
        "failBuild": {
            "onSecurityIssues": true,
            "onBuildFailure": true,
            "onDeploymentFailure": true
        }
    }
