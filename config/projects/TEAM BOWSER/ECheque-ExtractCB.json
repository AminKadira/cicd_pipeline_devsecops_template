{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "DevSecOps Pipeline Configuration for ECheque-ExtractCB",
    "project": {
        "name": "ECheque-ExtractCB",
        "gitUrl": "git@gitlab.fr.pluxee.tools:cicd/ECheque-ExtractCB.git",
        "gitBranch": "release/cicd",
        "gitCredentials": "git-ssh-key",
        "jenkinsAgent": "plxfrsr-l1pi027",
        "environments": [
            {
                "name": "tst",
                "displayName": "Test",
                "targetServers": []
            },
            {
                "name": "sta",
                "displayName": "Staging",
                "targetServers": []
            },
            {
                "name": "prd",
                "displayName": "Production",
                "targetServers": []
            }
        ]
    },
    "build": {
        "scriptPath": "D:\\_puppet\\script\\buildDotNetCore3.1.ps1",
        "framework": ".NET Core 3.1",
        "configuration": "Release",
        "verbosity": "normal",
        "proxyServer": "proxy.fr.pluxee.tools",
        "proxyPort": "3128",
        "apis": [],
        "artifacts": {
            "pattern": "**/bin/Release/**/*.dll",
            "exclude": [
                "**/obj/**",
                "**/test/**"
            ]
        }
    },
    "security": {
        "dependencyScan": {
            "enabled": true,
            "tool": "NuGet",
            "failOnCritical": true,
            "failOnHigh": true,
            "failOnMedium": false
        },
        "codeAnalysis": {
            "enabled": false,
            "tool": "SonarQube"
        },
        "secretsScan": {
            "enabled": false,
            "tool": "GitLeaks"
        }
    },
    "notifications": {
