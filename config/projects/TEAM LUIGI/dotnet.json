{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "DevSecOps Pipeline Configuration for .NET projects",
    "project": {
        "name": "dotnet.git",
        "gitUrl": "git@gitlab.fr.pluxee.tools:core_module/dotnet.git",
        "gitBranch": "release/cicd",
        "gitCredentials": "git-ssh-key",
        "jenkinsAgent": "plxfrsr-l1pi027",
        "environments": [
            {
                "name": "tst",
                "displayName": "Test",
                "targetServers": [
                    "plxfrsr-l2ta015"
                ]
            },
            {
                "name": "sta",
                "displayName": "Staging",
                "targetServers": [
                    "plxfrsr-l1sac91",
                    "plxfrsr-l1sac92",
                    "plxfrsr-l1sac93",
                    "plxfrsr-l1sac94"
                ]
            },
            {
                "name": "prd",
                "displayName": "Production",
                "targetServers": [
                    "plxfrsr-l1pab41",
                    "plxfrsr-l1pab42",
                    "plxfrsr-l1pab43",
                    "plxfrsr-l1pab44",
                    "plxfrsr-l2ra015"
                ]
            }
        ]
    },
    "build": {
        "scriptPath": "D:\\_puppet\\script\\buildDotNetCore3.1.ps1",
        "framework": ".NET Core 3.1",
        "configuration": "Release",
        "verbosity": "normal",
        "proxyServer": "proxy.fr.pluxee.tools",
        "proxyPort": "3128",
        "apis": [
            "Ssmf.CoreModule.Api.CmApi",
            "Ssmf.CoreModule.Hosting.Wcf"
        ],
        "artifacts": {
            "pattern": "**/bin/Release/**/*.dll",
            "exclude": [
                "**/obj/**",
                "**/test/**"
            ]
        }
    },
    "security": {
        "dependencyScan": {
            "enabled": true,
            "tool": "NuGet",
            "failOnCritical": true,
            "failOnHigh": true,
            "failOnMedium": false
        },
        "codeAnalysis": {
            "enabled": false,
            "tool": "SonarQube"
        },
        "secretsScan": {
            "enabled": false,
            "tool": "GitLeaks"
        }
    },
    "notifications": {
